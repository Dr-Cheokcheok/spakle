<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spakle.spakleclone20221104.repository.AccountRepository">
    <resultMap id="user" type="com.spakle.spakleclone20221104.domain.User">
        <result property="id" column="id"></result>
        <result property="password" column="password"></result>
        <result property="role" column="role"></result>
        <result property="name" column="name"></result>
        <result property="phone" column="phone"></result>
        <result property="post_code" column="post_code"></result>
        <result property="address" column="address"></result>
        <result property="detail_address" column="detail_address"></result>
        <result property="event_sosick" column="event_sosick"></result>
        <result property="create_date" column="create_date"></result>
        <result property="update_date" column="update_date"></result>
    </resultMap>

    <insert id="save" parameterType="com.spakle.spakleclone20221104.domain.User">
        insert into
            user_mst
        values (
            #{id},
            #{password},
            'USER',
            #{name},
            #{phone},
            #{post_code},
            #{address},
            #{detail_address},
            #{event_sosick},
            now(),
            now()
        )
    </insert>

    <select id="overlappedID" parameterType="com.spakle.spakleclone20221104.domain.ChkId" resultType="int">
        select count(id) From user_mst where id=#{id}
    </select>

