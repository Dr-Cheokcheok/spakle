<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spakle.spakleclone20221104.repository.AccountRepository">
    <insert id="save"
            parameterType="com.spakle.spakleclone20221104.domain.User"
            useGeneratedKeys="true"
            keyProperty="username">
        insert info
            user_mst
        values(
            0,
            #{username},
            #{password},
            #{role_username},
            #{name},
            #{phone},
            #{post_code},
            #{address},
            #{detail_address},
            #{event_sosick},
            now(),
            now()
        )
    </insert>

    <select id="findUserByUsername" parameterType="String" resultType="com.spakle.spakleclone20221104.domain.User">
        select
            id,
            username,
            password,
            role,

            name,
            phone,
            post_code,
            address,
            detail_address,
            event_sosick,

            create_date,
            update_date
        from
            user_mst
        where
            username = #{username}
    </select>

</mapper>
