<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spakle.spakleclone20221104.repository.AccountRepository">
    <resultMap id="role" type="com.spakle.spakleclone20221104.domain.Role">
        <result property="username" column="username"></result>
        <result property="role" column="role"></result>
        <result property="role_name" column="role_name"></result>
    </resultMap>

    <resultMap id="user" type="com.spakle.spakleclone20221104.domain.User">
        <result property="id" column="id"></result>
        <result property="password" column="password"></result>
        <result property="username" column="username"></result>
        <result property="oauth_name" column="oauth_name"></result>
        <result property="name" column="name"></result>
        <result property="phone" column="phone"></result>
        <result property="post_code" column="post_code"></result>
        <result property="address" column="address"></result>
        <result property="detail_address" column="detail_address"></result>
        <result property="event_sosick" column="event_sosick"></result>
        <result property="create_date" column="create_date"></result>
        <result property="update_date" column="update_date"></result>
        <collection property="role" column="role"></collection>
    </resultMap>

    <insert id="save"
            parameterType="com.spakle.spakleclone20221104.domain.User"
            useGeneratedKeys="true"
            keyProperty="username">
        insert info
            user_mst
        values(
            0,
            #{username},
            #{password},
            #{role_username},
            #{name},
            #{phone},
            #{post_code},
            #{address},
            #{detail_address},
            #{event_sosick},
            now(),
            now()
        )
    </insert>

    <update id="updateUserOauth2" parameterType="com.spakle.spakleclone20221104.domain.User">
        update
            user_mst
        set
            oauth_username = #{oauth_username},
            provider = #{provider},
            update_date = now()
        where
            id = #{id}
    </update>
    <select id="findUserById" parameterType="String" resultMap="user">
        select
            um.id,
            um.username,
            um.oauth_username,
            um.password,
            um.name,
            um.username,
            um.provider,
            um.role_id,

            rm.role,
            rm.role_name,

            um.phone,
            um.post_code,
            um.address,
            um.detail_address,
            um.event_sosick,

            um.create_date,
            um.update_date
        from
            user_mst um
            left outer join role_mst rm on(rm.username = um.role_id)
        where
            um.username = #{username}
    </select>

</mapper>
